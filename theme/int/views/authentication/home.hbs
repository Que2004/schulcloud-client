{{#extend "lib/loggedout"}}

    {{#content "styles" mode="append"}}
        <link rel="stylesheet" href="{{getAssetPath '/styles/homepage/index.css'}}" />
    {{/content}}

    {{#content "scripts" mode="append"}}
        <script src="{{getAssetPath '/scripts/login.js'}}" type="text/javascript" nonce="{{nonceValue}}" defer></script>
        <script nonce="{{nonceValue}}">
            window.production = '{{ @root.production }}';
        </script>
        <script src="{{getAssetPath '/scripts/theme-blog.js'}}" type="text/javascript" nonce="{{nonceValue}}" defer></script>
        <script src="{{getAssetPath '/scripts/blog-fetch.js'}}" type="text/javascript" nonce="{{nonceValue}}" defer></script>
    {{/content}}

    {{#content "page"}}

        <!-- GLOBAL_ANNOUNCEMENT -->
        <div class="container container-content">
            {{#hasConfig "GLOBAL_ANNOUNCEMENT"}}
                <div class="notification alert alert-info">
                    <div class="notification-content">
                        {{{getConfig "GLOBAL_ANNOUNCEMENT"}}}
                    </div>
                </div>
            {{/hasConfig}}
        </div>

        <!-- GHOST (will be replaced by js) -->
        <div class="hidden" id="SC_THEME">int</div>
        <div class="int-blog">
            <div class="content" style="opacity: 0; transition: opacity 0.7s ease-in;">
                <div class="container">
                    <div class="row section-landing flex-container">
                        <div class="col-sm-6 col-lg-4">
                            <div class="pull-left">
                                <h6 class="font-weight-bold">HPI Schul-Cloud</h6>
                                <h1 class="mb-3">Lernen global vernetzt<br>- digital unterstützt</h1>
                                <a class="btn btn-primary mb-3 mb-md-0 hidden-sm-down" href="https://blog.hpi-schul-cloud.de/community">Jetzt registrieren</a>
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-8">
                            <div class="text-xs-center text-md-right">
                                <img class="mb-3 mb-md-0" src="/images/home/hero.svg" alt="Hero">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="container">
                    <h2 class="mb-3 section-heading">Das macht die HPI Schul-Cloud aus</h2>
                    <div class="row section flex-container section-landing">
                        <div class="col-sm-12 col-md-6">
                            <img class="mb-3 mb-md-0" src="/images/home/advantages.svg" alt="">
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <div class="pull-right">
                                <div class="flex-container mb-1">
                                    <img class="check" src="https://s3.hidrive.strato.com/schul-cloud-hpi/default/images/check-icon-1.svg">
                                    <p class="ml-1 teaser">Gemeinsam lernen in digitalen Räumen</p>
                                </div>
                                <div class="flex-container mb-1">
                                    <img class="check" src="https://s3.hidrive.strato.com/schul-cloud-hpi/default/images/check-icon-1.svg">
                                    <p class="ml-1 teaser">Lernmaterial, Chat, Aufgaben, Videokonferenzen und mehr</p>
                                </div>
                                <div class="flex-container mb-1">
                                    <img class="check" src="https://s3.hidrive.strato.com/schul-cloud-hpi/default/images/check-icon-1.svg">
                                    <p class="ml-1 teaser">Kostenlos für alle Schulen</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="container">
                    <h2 class="mb-3 section-heading">Vorteile der HPI Schul-Cloud</h2>

                    <div class="row flex-container mb-3">
                        <div class="col-sm-12 col-md-4 text-xs-center">
                            <img class="mb-3 mb-md-0 section-img" src="/images/home/advantage_1.svg" alt="">
                        </div>
                        <div class="col-sm-12 col-md-8">
                            <h5 class="heading font-weight-bold ">Gemeinsam mit und für Schulen entwickelt.</h5>
                            <p class="mb-2">Die HPI Schul-Cloud ist auf das optimiert, was Lehrkräfte und Schülerschaft brauchen und kann mit Lernangeboten vieler Anbieter verbunden werden. Gemeinsam mit unseren Nutzer:innen und zahlreichen Partnern in der deutschen Bildungslandschaft entwickeln wir uns weiter!</p>
                            <link><a class="font-weight-bold" href="https://blog.hpi-schul-cloud.de/about">Mehr erfahren <i class="fa fa-angle-double-right font-weight-bold"></i></a>
                        </div>
                    </div>

                    <div class="row flex-container mb-3">
                        <div class="col-md-4 push-md-8">
                            <div class="text-xs-center text-md-right">
                                <img class="mb-3 mb-md-0 section-img" src="/images/home/advantage_2.svg" alt="">
                            </div>
                        </div>
                        <div class="col-md-8 pull-md-4">
                            <h5 class="heading font-weight-bold ">Einfach in der Anwendung –   jederzeit und überall</h5>
                            <p class="mb-2">Die HPI Schul-Cloud ist sicher, transparent und kann ohne lange Einarbeitung genutzt werden – zeitunabhängig und mit dem eigenen Handy, Tablet oder Computer.</p>
                        </div>
                    </div>

                    <div class="row flex-container mb-3">
                        <div class="col-sm-12 col-md-4 text-xs-center">
                            <img class="mb-3 mb-md-0 section-img" src="/images/home/advantage_3.svg" alt="">
                        </div>
                        <div class="col-sm-12 col-md-8">
                            <h5 class="heading font-weight-bold ">Datenschutzkonform und sicher</h5>
                            <p class="mb-2">Die HPI Schul-Cloud wird in und für Deutschland entwickelt. Datenschutzkonformer Zugriff auf Lernsoftware, sowie Datensouveränität, sind gesichert.</p>
                            <link><a class="font-weight-bold" href="https://schul-cloud.org/mint-ec/06-datenschutz-und-urheberrecht">Mehr erfahren <i class="fa fa-angle-double-right font-weight-bold"></i></a>
                        </div>
                    </div>

                    <div class="row flex-container mb-3">
                        <div class="col-md-4 push-md-8">
                            <div class="text-xs-center text-md-right">
                                <img class="mb-3 mb-md-0 section-img" src="/images/home/advantage_4.svg" alt="">
                            </div>
                        </div>
                        <div class="col-md-8 pull-md-4">
                            <h5 class="heading font-weight-bold">Digitale Bildung partnerschaftlich gestalten </h5>
                            <p class="mb-2">Gemeinsam mit unseren starken Partner:innen, den deutschen Auslandsschulen, gefördert durch das auswärtige Amt, wird die HPI Schul-Cloud International weiterentwickelt.</p>
                            <link><a class="font-weight-bold" href="https://blog.hpi-schul-cloud.de/about">Mehr erfahren <i class="fa fa-angle-double-right font-weight-bold"></i></a>
                        </div>
                    </div>

                    <section class="section section-tilt">
                        <div class="container container-content content-width-max">
                            <div style="text-align: center;">
                                <h2 class="h3 section-title center" style="max-width: 20ch; margin: 0 auto;">
                                    Alle Neuigkeiten rund um die HPI Schul-Cloud bequem in Ihrem Postfach:
                                </h2>
                                <a href="https://hpi.de/open-campus/registrierung/hpi-schul-cloud-newsletter/" target="_blank" class="btn btn-outline btn-white-outlined mt-2">
                                    Newsletter abonnieren
                                </a>
                            </div>
                        </div>
                    </section>

                    <section class="section section-tilt accent">
                        <div class="container container-content content-width-max">
                            <div style="text-align: center;">
                                <h2 class="h3 section-title center">
                                    Projektpartner:innen
                                </h2>
                                <div class="partners row">
                                    <a class="col-sm py-1" href="https://hpi.de/open-campus/hpi-initiativen/schulcloud.html" target="_blank" rel="noopener">
                                        <img src="https://schul-cloud-hpi.s3.hidrive.strato.com/images/partner/hpi-logo.jpg" alt="Logo HPI" class="partner">
                                    </a>
                                    <a class="col-sm py-1" href="https://www.mint-ec.de/" target="_blank" rel="noopener">
                                        <img src="https://schul-cloud-hpi.s3.hidrive.strato.com/default/images/partner/mintec-logo.jpg" alt="Logo MINT-EC" class="partner">
                                    </a>
                                    <a class="col-sm py-1" href="https://www.bmbf.de/" target="_blank" rel="noopener">
                                        <img src="https://schul-cloud-hpi.s3.hidrive.strato.com/default/images/partner/bmbf-logo.jpg" alt="Logo BMBF" class="partner">
                                    </a>
                                </div>
                                <div class="partners row">
                                    <a class="col-sm py-1" href="https://edu-sharing.com/" target="_blank" rel="noopener">
                                        <img src="https://s3.hidrive.strato.com/schul-cloud-hpi/default/images/logo-edu-sharing-network-bunt.svg" alt="Logo HPI" class="partner">
                                    </a>
                                    <a class="col-sm py-1" href="https://wirlernenonline.de/" target="_blank" rel="noopener">
                                        <img src="https://s3.hidrive.strato.com/schul-cloud-hpi/default/images/WLO-03.png" alt="Logo MINT-EC" class="partner">
                                    </a>
                                    <a class="col-sm py-1" href="https://www.wikimedia.de/" target="_blank" rel="noopener">
                                        <img src="https://s3.hidrive.strato.com/schul-cloud-hpi/default/images/WMDE_Logo_vertikal_black.png" alt="Logo BMBF" class="partner">
                                    </a>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </div>

            <div class="loading text-center mb-3" style="min-height: 70vh; margin-top: 100px;">
                <i class="fa fa-spinner fa-spin load-icon spinner" aria-hidden="true"
                   style="font-size: 25px;"></i>
                <div class="placeholder" style="display: none;">
                    <img src="{{getAssetPath '/images/repair.png'}}" alt="" width="350px">
                    <p class="text-muted">{{$t "global.text.errorWhileLoadingPage"}}</p>
                    <button type="button" class="btn btn-primary mt-2">{{$t "global.button.tryAgain"}}</button>
                </div>
            </div>
        </div>

        <!-- BLOG -->
        <script id="blog-card" type="text/x-handlebars-template">
        <a target="_blank" rel="noopener" href="\{{article.url}}" class="blog-card-wrapper">
        <article class="blog-card">
            <img class="thumbnail" alt="\{{article.img.title}}" src="\{{article.img.src}}">
            <div class="body">
                <h2 class="heading">
                    <div class="title">
                        \{{article.title}}
                    </div>
                    <small class="pub-date text-muted">\{{article.pubDate}}</small>
                </h2>
                <p class="description text-dark">\{{truncatePure (stripHTMLTags article.description) 200}}</p>
            </div>
        <div class="mb-1 text-center">
        <span class="open-link">{{$t "home.link.openArticle"}}</span>
        </div>
        </article>
        </a>
        </script>

        <script id="blog-entries" type="text/x-handlebars-template">
            \{{#each blogFeed}}
            \{{> "blog-card" article=this}}
            \{{/each}}
        </script>


        {{#embed "authentication/section" style="" class=""}}
            {{#content "body"}}
                <h2 class="h3 section-title center">{{{$t "home.headline.HPISchoolCloudBlog"}}}</h2>
                <div class="blog-cards">
                    <i class="fa fa-spinner fa-spin load-icon spinner" aria-hidden="true"
                       style="font-size: 25px;"></i>
                </div>
                <a href="https://blog.hpi-schul-cloud.de" target="scblog" class="blog-link">{{$t "home.link.moreArticles"}}</a>
                {{/content}}
            {{/embed}}


        {{/content}}
        {{/extend}}
