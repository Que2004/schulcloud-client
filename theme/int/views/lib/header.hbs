<header class="header">
    <nav class="container">
        <a id="title" href="/" aria-label="{{$t "global.link.landing"}}">
            <img class="logo" alt="{{theme.title}}" src="{{getAssetPath '/images/logo/logo-hpi-schul-cloud-international.svg'}}"/>
        </a>
        {{#unless hideMenu}}
            <ul class="nav">
                <li>
                    <a class="nav-link" href="/about">{{$t "global.link.aboutTheProject"}}</a>
                </li>
                <li>
                    <a class="nav-link" href="https://blog.hpi-schul-cloud.de/faq" target="_blank" rel="noopener">{{$t "home.header.link.faq"}}</a>
                </li>
                <li class="hidden-xs-down nav-link-login">
                    <a class="btn-primary-nuxt-outline" href="/loginRedirect" data-testid="login-btn">
                        <i class="fa fa-sign-in" aria-hidden="true"></i> {{$t "home.header.link.login"}}
                    </a>
                </li>
                <li class="hidden-xs-down">
                    <a class="btn-primary-nuxt" href="/community">{{$t "global.link.register"}}</a>
                </li>
            </ul>
        {{/unless}}
    </nav>
    <div class="text-center hidden-sm-up mb-1">
        <a class="btn btn-sm btn-outline btn-primary" href="/loginRedirect"><i class="fa fa-sign-in" aria-hidden="true"></i> {{$t "home.header.link.login"}}</a>
        <a class="btn btn-sm btn-primary" href="/community">{{$t "global.link.register"}}</a>
    </div>
</header>
